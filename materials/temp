from django.views.generic import ListView
from .models import Material, Category


class CategoryListView(ListView):
    model = Category
    template_name = "materials/category_list.html"


class MaterialByCategoryView(ListView):
    context_object_name = 'materials'
    template_name = 'materials/materials_list.html'

    def get_queryset(self):
        self.category = Category.objects.get(slug=self.kwargs['slug'])
        queryset = Material.objects.filter(category=self.category)
        return queryset

    def get_title_data(self, **kwargs):
        title = super().get_title_data(**kwargs)
        title['title'] = self.category
        return title